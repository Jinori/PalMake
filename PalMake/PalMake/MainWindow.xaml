<Window x:Class="PalMake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalMake"
        mc:Ignorable="d"
        Title="Gui06 Pal, Skill and Spell EPF Generator" Height="300" Width="450">
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Content="Input Folder:"/>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,10,10" Content="Output Folder:"/>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,10,10" Content="Current Action:"/>
        <Label Name="CurrentAction" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,70,70,70" Content="{Binding MyLabelText}"/>
        <TextBox Name="InputPath" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100, 12,50,10" MinWidth="185" BorderThickness="1"></TextBox>
        <TextBox Name="OutputPath" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100, 32,10,10" MinWidth="185" BorderThickness="1"></TextBox>
        <Button Name="BtnRun" Content="Convert" BorderThickness="2" Height="50" Width="90" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="BtnRun_OnClick"/>
    </Grid>
</Window>
